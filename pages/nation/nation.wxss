/* pages/nation/nation.wxss */
page{
  background-color: antiquewhite;
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.get-button{
  margin-top: 240rpx;
  margin-bottom:180rpx;
  width: 60%;
}

.avatar-container{
  width: 300rpx;
  height: 300rpx;
  position: relative;
  border: white;
  display: flex;
  align-items: center;
  background-color: white;
  border-radius:10rpx;
  overflow: hidden;
  margin-top: 200rpx;
  margin-bottom: 40rpx;
}

.avatar-container-click{
  width: 300rpx;
  height: 300rpx;
  margin-top: 200rpx;
  margin-bottom: 40rpx;
}

.avatar{
  width: 280rpx;
  height: 280rpx;
  border-radius: 28rpx;
  overflow: hidden;
  margin: auto;
}

.current-icon{
  position: absolute;
}
.current-icon-0{
  top: 0rpx;
  left: 0rpx;
}

.current-icon-1{
  top: 0rpx;
  left: 190rpx;
}

.current-icon-2{
  top: 190rpx;
  left: 0rpx;
}

.current-icon-3{
  top: 190rpx;
  left: 190rpx;
}


.icon-list{
  margin-top: 20rpx;
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.buttons-pos-container{
  width: 680rpx;
  display: flex;
  margin-top: 100rpx;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 120rpx;
}

.position-button{
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #ffffff;
  background-color: #f90;
  font-family: PingFang-SC-Bold;
  font-size: 26rpx;
}

.icon-image{
  width: 110rpx;
  height: 110rpx;
}

.s-button{
  width: 80%;
  margin-top: 20rpx;
}


.canvasBox {
  width: 0rpx;
  height: 0rpx;
  overflow: hidden;
  display: block;
  position: fixed;
}

.myCanvas {
  width: 1200rpx;
  height: 1200rpx;
  position: relative;
  left: 1000rpx;
}


.my-canvas{
  width: 300rpx;
  height: 300rpx;
  background-color: aquamarine;
  margin-top: 50rpx;
}

.back{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}



